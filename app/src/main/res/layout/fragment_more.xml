<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Job"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
        <Spinner
                android:id="@+id/jobs_spinner"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <EditText
            android:id="@+id/report_file_name_edit_text"
            android:layout_below="@id/spinner_layout"
            android:hint="file name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/generate_raport_btn"
            android:text="Generate report"
            android:background="@color/colorAccent"
            android:layout_below="@id/report_file_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_marginTop="10dp"
            android:id="@+id/send_via_email_btn"
            android:text="Send via e-mail"
            android:background="@color/colorAccent"
            android:layout_below="@id/generate_raport_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>